<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
    <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
        <ImageView
                android:id="@+id/back_bt"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/back_arrow"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="@string/tab_essay"
                />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_layout"
            android:layout_above="@+id/bottom_layout"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                <ImageView
                        android:id="@+id/author_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        tools:src="@mipmap/timg"
                        />
                <TextView
                        android:id="@+id/author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/author_avatar"
                        android:layout_toEndOf="@id/author_avatar"
                        android:textColor="@color/name_blue"
                        tools:text="mashell"
                        />
                <TextView
                        android:id="@+id/author_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/author_avatar"
                        android:layout_toEndOf="@id/author_avatar"
                        android:layout_alignBottom="@id/author_avatar"
                        android:textColor="@color/textColorGray"
                        tools:text="2017.2.22"
                        />
                <TextView
                        android:id="@+id/essay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="不畅销小说写作指南"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@id/author_avatar"
                        />
                <TextView
                        android:id="@+id/essay_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/essay_title"
                        />

                <TextView
                        android:id="@+id/essay_author_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/essay_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        tools:text="（责任编辑：金子棋 jinziqi@wufazhuce.com）"
                        android:textSize="12sp"
                        />
                <View
                        android:id="@+id/introduce_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/essay_author_introduce"
                        />

                <ImageView
                        android:id="@+id/author_introduce_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        tools:src="@mipmap/timg"
                        android:layout_below="@id/introduce_line"
                        />

                <TextView
                        android:id="@+id/author_introduce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/name_blue"
                        android:layout_alignTop="@+id/author_introduce_avatar"
                        android:layout_toRightOf="@+id/author_introduce_avatar"
                        android:layout_toEndOf="@id/author_introduce_avatar"
                        tools:text="mashell"
                        />

                <TextView
                        android:id="@+id/author_introduce_it"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/author_introduce_avatar"
                        android:layout_toEndOf="@id/author_introduce_avatar"
                        android:layout_below="@id/author_introduce_name"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="编剧，小说作者。公众号：ma"
                        />
                <TextView
                        android:id="@+id/author_introduce_weibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="weibo: @mashell"
                        android:layout_alignBottom="@id/author_introduce_avatar"
                        android:layout_toRightOf="@+id/author_introduce_avatar"
                        android:layout_toEndOf="@id/author_introduce_avatar"
                        android:textSize="12sp"
                        />
            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/comment_list"
                    android:textSize="12sp"
                    android:background="@color/line_white"/>
            <com.mashell.one.component.LoadMoreRecyclerView
                    android:id="@+id/comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:gravity="center_vertical"
            >
        <RelativeLayout
                android:id="@+id/likeContainer"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                <ImageView
                        android:id="@+id/likeImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/laud"
                        />
                <TextView
                        android:id="@+id/likeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1311"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>
        </RelativeLayout>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/alignLine"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

        <RelativeLayout
                android:id="@+id/commentContainer"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                <ImageView
                        android:id="@+id/commentImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/comment_image"
                        />
                <TextView
                        android:id="@+id/commentText"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        tools:text="1311"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>
        </RelativeLayout>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/alignLine"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

        <RelativeLayout
                android:id="@+id/shareContainer"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                <ImageView
                        android:id="@+id/shareImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share_image"
                        />
                <TextView
                        android:id="@+id/shareText"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        tools:text="1311"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alignLine"
            android:layout_above="@+id/bottom_layout"
            />

</RelativeLayout>