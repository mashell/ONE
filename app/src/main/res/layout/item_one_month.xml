<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
        <ImageView
                android:id="@+id/oneMonthImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/test"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/itemTransparentGray"
                android:layout_alignParentBottom="true"
                >
            <TextView
                    android:id="@+id/itemHpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="VOL.3001"
                    />
            <TextView
                    android:id="@+id/itemMakeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    tools:text="Oct.2016"
                    />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
            android:id="@+id/hp_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxEms="21"
            android:lines="2"
            android:gravity="center"
            tools:text="说到人生，不管谁都是业余新手啊。 任何人都是第一次参加，人生这种事没有什么专业老手。 by 伊坂幸太郎"
            android:background="@drawable/border_right_angle"
            />

</LinearLayout>