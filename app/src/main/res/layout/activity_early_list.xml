<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorBar"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/back_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/early_list"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1cccc"
                android:layout_alignParentBottom="true"
                />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        <TextView
                android:id="@+id/tabEssay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tab_essay"
                />
        <TextView
                android:id="@+id/tabSerial"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tab_serial"
                />
        <TextView
                android:id="@+id/tabQuestion"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tab_question"
                />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/earlyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>